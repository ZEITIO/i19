#!/usr/bin/env ruby
require "thor"
require "i19"

module I19
  class CLI < Thor
    desc "update", "Scans your app folder for I18n.t calls and updates your yaml file accordingly"
    method_option :path, :aliases => "-p", :desc => "Specify the path to scan for I18n.t calls"
    method_option :default_locale, :aliases => "-dl", :desc => "Specify the default locale in which language the defaults are written"
    def update
      I19::Commands.update(path: options[:path], default_locale: options[:default_locale])
    end

    desc "merge", "Scans your locales folder and merges every yml file into one single fat file alfabetically ordered :)"
    method_option :locales_path, :aliases => "-lp", :desc => "Specify the path to scan for I18n.t calls"
    def merge
      I19::Commands.merge(locales_path: options[:locales_path])
    end
  end
end

I19::CLI.start
